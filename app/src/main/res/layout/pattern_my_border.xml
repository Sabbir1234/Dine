<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:id="@+id/my_border_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Name: "
                />

            <TextView
                android:id="@+id/show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text=" loading"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:text="Phone: "
                android:layout_gravity="top"
                />

            <TextView
                android:id="@+id/show_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:text="loading"
                android:textIsSelectable="true"
                android:layout_gravity="top"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/invisible_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:visibility="invisible"
            android:text=""
            android:layout_gravity="top"
            />

        <LinearLayout
            android:id="@+id/show_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="top"
            android:background="#F7F5F5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:text="Status      : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#4CAF50"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_day_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#F7F5F5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:text="Days On   : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="top"
                />

            <TextView
                android:id="@+id/day_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:text="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="top"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/show_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F5F5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:text="Paid          : "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:text="0000"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingLeft="10dp"
                    android:text="Add more : + "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    />

                <EditText
                    android:id="@+id/update_payment_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:digits="+-0123456789"
                    android:paddingLeft="10dp"
                    android:hint="new payment"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/button_update_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:background="@drawable/button_ripple_effect"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>